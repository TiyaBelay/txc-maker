<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

  <servlet>		
    <servlet-name>get-txc</servlet-name>
    <servlet-class>org.mercycorps.translationcards.txcmaker.servlet.GetTxcServlet</servlet-class>
  </servlet>		
  <servlet-mapping>		
    <servlet-name>get-txc</servlet-name>
    <url-pattern>/get-txc</url-pattern>
  </servlet-mapping>

  <servlet>		
    <servlet-name>helloWorld</servlet-name>
    <servlet-class>org.mercycorps.translationcards.txcmaker.servlet.HelloWorldServlet</servlet-class>
  </servlet>		
  <servlet-mapping>		
    <servlet-name>helloWorld</servlet-name>
    <url-pattern>/helloWorld</url-pattern>
  </servlet-mapping>

  <servlet>
      <servlet-name>ImportServlet</servlet-name>
      <servlet-class>org.mercycorps.translationcards.txcmaker.servlet.ImportServlet</servlet-class>
  </servlet>
  <servlet-mapping>
      <servlet-name>ImportServlet</servlet-name>
      <url-pattern>/importDeck</url-pattern>
  </servlet-mapping>

  <servlet>
      <servlet-name>PreviewServlet</servlet-name>
      <servlet-class>org.mercycorps.translationcards.txcmaker.servlet.PreviewServlet</servlet-class>
  </servlet>
  <servlet-mapping>
      <servlet-name>PreviewServlet</servlet-name>
      <url-pattern>/previewDeck</url-pattern>
  </servlet-mapping>
		
  <servlet>		
    <servlet-name>oauth2callback</servlet-name>
    <servlet-class>org.mercycorps.translationcards.txcmaker.auth.OAuth2Callback</servlet-class>
  </servlet>		
  <servlet-mapping>		
    <servlet-name>oauth2callback</servlet-name>
    <url-pattern>/oauth2callback</url-pattern>
  </servlet-mapping>

  <servlet>
      <servlet-name>builder-task-handler</servlet-name>
      <servlet-class>org.mercycorps.translationcards.txcmaker.task.TxcBuilderTaskHandler</servlet-class>
  </servlet>
  <servlet-mapping>
      <servlet-name>builder-task-handler</servlet-name>
      <url-pattern>/tasks/txc-build</url-pattern>
  </servlet-mapping>
    <filter>
        <filter-name>cross-origin</filter-name>
        <filter-class>org.mercycorps.translationcards.txcmaker.filter.CORSFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>cross-origin</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

</web-app>
